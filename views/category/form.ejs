<%- contentFor('body') %>

<div id="categories_list">
    <form class="product-form" action="/categories<%= category.title ? `/${category.id}?_method=PUT` : '' %>" method="POST">
        <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<%= category.title ? category.title : '' %>">
        </div>

        <button class="btn" type="submit">Add Category</button>
    </form>
</div>