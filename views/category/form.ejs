<%- contentFor('body') %>
<ion-list lines="full" class="ion-no-margin">
    <ion-list-header lines="full">
      <ion-label>
        New Category
      </ion-label>
    </ion-list-header>

    <form class="product-form" action="/categories<%= category.title ? `/${category.id}?_method=PUT` : '' %>" method="POST">
       
        <%- _csrfForm %>

        <ion-item>
            <ion-label position="floating">Title</ion-label>
        <ion-input type="text" name="title" id="title" value="<%= category.title ? category.title : '' %>"></ion-input>
        </ion-item>
        
        <ion-button class="btn" type="submit">Add Category</ion-button>

    </form>
</ion-list>
